Host *
    #VisualHostKey yes
    ServerAliveInterval 5

    # https://unix.stackexchange.com/a/406598
    ControlMaster auto
    ControlPath /tmp/ssh-cm-%r-%h-%p
    ControlPersist yes
    ForwardAgent yes
    PubkeyAcceptedKeyTypes +ssh-rsa

    Include conf.d/*.conf

Host github.com
    User git
    ControlPath /tmp/ssh-cm-ben-github-%h
    VisualHostKey no

Host git.sudo.is
    User git
    ControlPath /tmp/ssh/cm-ben-%r-%h
    VisualHostKey no

Host *.sdf.org
    User mazet
    DynamicForward 4001

Host mainframe
    User ben
    HostName mainframe.sudo.is
    ForwardAgent yes
    DynamicForward 4000
    #LocalForward 127.0.0.1:8008 172.18.0.30:8008
    #LocalForward 127.0.0.1:4089 192.168.21.4:3389

Host *.sudo.is
    User ben
    ForwardAgent yes

