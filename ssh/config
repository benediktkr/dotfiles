     HostName rvk1.sudo.is
     UserKnownHostsFile ~/.ssh/known_hosts.initramfs
     User root

host ams0-initramfs
     HostName ams0.sudo.is
     UserKnownHostsFile ~/.ssh/known_hosts.initramfs
     User root

host ber0-initramfs
