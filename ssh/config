
Host *
     #VisualHostKey yes
     ServerAliveInterval 5

     # https://unix.stackexchange.com/a/406598
     ControlMaster auto
     ControlPath ~/.ssh/cm-%h
     ControlPersist 8h

host github.com
     VisualHostKey no

host git.sudo.is
     ForwardAgent no
     ProxyCommand ssh -A mainframe.sudo.is nc git.sudo.is 22
     HostName git.sudo.is
     VisualHostKey no

host *.sdf.org
     User mazet
     DynamicForward 4001

host freespace-initramfs
     HostName freespace.sudo.is
     UserKnownHostsFile ~/.ssh/known_hosts.initramfs
     User root
     ControlMaster no

host fra2-initramfs
     HostName 176.9.51.165
     UserKnownHostsFile ~/.ssh/known_hosts.initramfs
     User root

host mainframe-initramfs
     HostName mainframe.sudo.is
     UserKnownHostsFile ~/.ssh/known_hosts.initramfs
     User root

