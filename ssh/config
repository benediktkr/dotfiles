
Host *
     #VisualHostKey yes
     ServerAliveInterval 5

     # https://unix.stackexchange.com/a/406598
     ControlMaster auto
     ControlPath /tmp/ssh-cm-%r-%h-%p
     ControlPersist 8h
     ForwardAgent yes
     PubkeyAcceptedKeyTypes +ssh-rsa

     Include conf.d/*

Host github.com
     VisualHostKey no

host *.sdf.org
     User mazet
     DynamicForward 4001

Host cisco.s21.sudo.is
     User root
     KexAlgorithms +diffie-hellman-group1-sha1,diffie-hellman-group14-sha1
     HostName 192.168.21.2

Host mainframe
     User ben
     HostName mainframe.sudo.is
     ForwardAgent yes
     DynamicForward 4000
     LocalForward 127.0.0.1:8008 172.18.0.30:8008
     LocalForward 127.0.0.1:4089 192.168.21.4:3389

Host *.sudo.is
     User ben
     ForwardAgent yes

